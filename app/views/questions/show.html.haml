%h2=@question.title
%p=@question.body
- if current_user && current_user.id == @question.user_id && @question.answers.empty?
  %p= link_to 'Delete Question', question_path, method: :delete

.answers
  -if @question.answers.any?
    -@question.answers.each do |answer|
      =render partial: 'answer', locals: { answer: answer, question: @question }
  -else
    %p Know an answer? Please post it

-if @answer.errors.any?
  %p Your answer couldn't be submitted. Please see the errors:
  %ul
    - @answer.errors.full_messages.each do |msg|
      %li= msg
=form_for [@question, @answer], remote: true do |form|
  =form.label :body
  =form.text_area :body
  =form.button 'Post Your Answer'
