=link_to 'Ask question', new_question_path, class: 'btn btn-default'
-if @questions.any?
  %h1='Top Questions'
  %questions
    %ul.list-group
      -@questions.each do |question|
        %li.list-group-item
          %span.badge= question.answers.count
          =link_to question.title, question
-else
  %h3 There are no questions. Ask something

=subscribe_to "/questions"